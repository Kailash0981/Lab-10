#include <bits/stdc++.h>
using namespace std;
void dikstra(int V,vector<vector<pair<int,int>>>&adj,int src){
    vector<int>dist(V,INT_MAX);
    dist[src]=0;
    priority_queue<pair<int,int>,vector<pair<int,int>>,greater<pair<int,int>>>pq;
    pq.push({0,src});
 while(!pq.empty()){
     int d=pq.top().first;
     int u=pq.top().second;
     pq.pop();
     if(d>dist[u]) continue;
     for(auto &edge:adj[u]){
         int v=edge.first;
         int weight=edge.second;
         if(dist[u]+weight<dist[v]){
         dist[v]=dist[u]+weight;
         pq.push({dist[v],v});
         }
     }
 } cout<<"shortest distance from"<<src<<":";
 for(int i=0;i<V;i++){
     
         cout<<i<<"->"<<dist[i]<<" "<<endl;
     }
 
}
int main() {
  int V,E;
  cout<<"enter no of vertieces and edges"<<endl;
  cin>>V>>E;
  vector<vector<pair<int,int>>>adj(V);
  for(int i=0;i<E;i++){
      int u,v,w;
      cin>>u>>v>>w;
    adj[u].push_back({v,w});
    adj[v].push_back({u,w});
  }
  int src;
  cout<<"enter source node";
  cin>>src;
  dikstra(V,adj,src);


    return 0;
}